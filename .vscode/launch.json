    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch game server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/chessServer",
            "cwd": "${workspaceFolder}",
            "args": ["8080"],
            "MIMode": "gdb",
        },
        {
            "name": "Launch game client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/chessClient",
            "cwd": "${workspaceFolder}",
            "args": ["localhost", "8080"],
            "MIMode": "gdb",
        }

    ],
    "preLaunchTask": "Build",
    "compounds": [
        {
            "name": "Launch full game",
            "configurations": ["Launch game server", "Launch game client", "Launch game client"],
            "preLaunchTask": "Build"
        }
    ]
}